# Speech-to-Text Service - Environment Variables

# Service Configuration
SERVICE_NAME=speech-to-text-service
SERVICE_PORT=8123
SERVICE_VERSION=1.0.0

# Whisper Model Configuration
WHISPER_MODEL_SIZE=medium
WHISPER_DEVICE=cuda
WHISPER_LANGUAGE=en
WHISPER_MODEL_PATH=/models/whisper

# Google Cloud Speech-to-Text (Backup)
GOOGLE_CLOUD_SPEECH_ENABLED=true
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# Azure Speech Services (Alternative)
AZURE_SPEECH_ENABLED=false
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=eastus

# AssemblyAI (Alternative with diarization)
ASSEMBLYAI_API_KEY=your-assemblyai-api-key

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=4

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Processing Settings
MAX_AUDIO_FILE_SIZE_MB=100
SUPPORTED_AUDIO_FORMATS=wav,mp3,m4a,flac,ogg
ENABLE_WORD_TIMESTAMPS=true
ENABLE_DIARIZATION=true
CONFIDENCE_THRESHOLD=0.8

